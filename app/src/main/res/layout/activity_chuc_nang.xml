<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".activitys.ChucNangActivity">

    <RelativeLayout
        android:id="@+id/bgggg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_back_chuc_nang"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/button_back" />

        <TextView
            android:id="@+id/tv_title_chuc_nang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SIÊU TỐI ƯU"
            android:textColor="#fff"
            android:textSize="@dimen/_17sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/bgggg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_dosang" />

                        <TextView
                            android:id="@+id/dosang"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/do_sang"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_do_sang"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="40%"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_rung" />

                        <TextView
                            android:id="@+id/rung"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/rung"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_rung"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="Tắt"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_time" />

                        <TextView
                            android:id="@+id/timeScreen"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/thoi_gian_tat_man"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_time_screen"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="40%"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_bluetooth" />

                        <TextView
                            android:id="@+id/blueTooth"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/bluetooth"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_blueTooth"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="40%"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_wifi" />

                        <TextView
                            android:id="@+id/wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="Wifi"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="40%"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_amthanh" />

                        <TextView
                            android:id="@+id/sound"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/am_thanh"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_sound"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="40%"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/icon_dongbohoa" />

                        <TextView
                            android:id="@+id/upload"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/dong_bo_hoa"
                            android:textColor="@color/colorText" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_upload"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:text="40%"
                        android:textColor="@color/colorText" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBG">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/iv_ap_dung"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/button_chon" />

                    <TextView
                        android:id="@+id/apdung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/ap_dung"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>