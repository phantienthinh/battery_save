<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activitys.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@android:color/transparent"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_show_nav"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/icon_menu" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/sieu_tiet_kiem_pin"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_running"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_225sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/iv_running" />

                <ImageView
                    android:id="@+id/iv_main_done"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_230sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_datoiuu"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_tick_da_toi_uu"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_53sdp"
                    android:src="@drawable/icon_datoiuu1"
                    android:visibility="gone" />

            </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/circular_progress_Pin"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    app:direction="clockwise"
                                    app:dotColor="#5c5c5c"
                                    app:dotWidth="12dp"
                                    app:drawDot="false"
                                    app:enableProgressAnimation="true"
                                    app:fillBackground="false"
                                    app:formattingPattern=""
                                    app:progressBackgroundColor="#dadada"
                                    app:progressBackgroundStrokeWidth="1dp"
                                    app:progressCap="round"
                                    app:progressColor="#43D8D4"
                                    app:progressStrokeWidth="1dp"
                                    app:startAngle="170"
                                    app:textColor="#fffc59"
                                    app:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_pin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="100%"
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/pin_typeface"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/so_pin_hien_tai"
                                android:textColor="@color/colorText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <me.itangqi.waveloadingview.WaveLoadingView
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_centerInParent="true"
                                    app:wlv_waveColor="#7c5cb8d7" />


                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/circular_progress_Time"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    app:direction="clockwise"
                                    app:dotColor="#5c5c5c"
                                    app:dotWidth="12dp"
                                    app:drawDot="false"
                                    app:enableProgressAnimation="true"
                                    app:fillBackground="false"
                                    app:formattingPattern=""
                                    app:progressBackgroundColor="#dadada"
                                    app:progressBackgroundStrokeWidth="1dp"
                                    app:progressCap="round"
                                    app:progressColor="#43D8D4"
                                    app:progressStrokeWidth="1dp"
                                    app:startAngle="170"
                                    app:textColor="#fffc59"
                                    app:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="2h11m"
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/_13sdp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/time_typeface"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/thoi_gian_con"
                                android:textColor="@color/colorText" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <me.itangqi.waveloadingview.WaveLoadingView
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_centerInParent="true"
                                    app:wlv_waveColor="#7c5cb8d7" />

                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/circular_progress_nhietdo"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    app:direction="clockwise"
                                    app:dotColor="#5c5c5c"
                                    app:dotWidth="12dp"
                                    app:drawDot="false"
                                    app:enableProgressAnimation="true"
                                    app:fillBackground="false"
                                    app:formattingPattern=""
                                    app:progressBackgroundColor="#dadada"
                                    app:progressBackgroundStrokeWidth="1dp"
                                    app:progressCap="round"
                                    app:progressColor="#43D8D4"
                                    app:progressStrokeWidth="1dp"
                                    app:startAngle="170"
                                    app:textColor="#fffc59"
                                    app:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_nhietDo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="100%"
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/nhietDo_typeface"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/nhiet_do_pin"
                                android:textColor="@color/colorText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/circular_progress_dien_ap"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    app:direction="clockwise"
                                    app:dotColor="#be2f2f"
                                    app:dotWidth="5dp"
                                    app:drawDot="false"
                                    app:enableProgressAnimation="true"
                                    app:fillBackground="false"
                                    app:formattingPattern=""
                                    app:progressBackgroundColor="#dadada"
                                    app:progressBackgroundStrokeWidth="1dp"
                                    app:progressCap="round"
                                    app:progressColor="#43D8D4"
                                    app:progressStrokeWidth="2dp"
                                    app:startAngle="170"
                                    app:textColor="#fffc59"
                                    app:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_dienap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/dienap_typeface"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/dien_ap"
                                android:textColor="@color/colorText" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/adView"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_regime"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_chedo"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_che_do_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/che_do"
                    android:textColor="#d4d3d3"
                    android:textSize="14sp" />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_che_do"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sieu_toi_uu"
                    android:lines="1"
                    android:textColor="#d4d3d3"
                    android:textSize="12sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_setting"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/bg_chedo"
                android:text="@string/cai_dat"
                android:textColor="#d4d3d3" />
        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:background="#fff"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">

        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</RelativeLayout>