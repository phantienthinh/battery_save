<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_width="349dp"
        android:layout_height="308dp"
        android:background="@drawable/dialog_time"
        android:orientation="horizontal"
        android:padding="@dimen/_20sdp"
        android:weightSum="10"
       >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/second_15"
                android:layout_width="235dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|left"
                android:text="@string/fifteenSecond"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/second_30"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_below="@id/second_15"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:text="@string/Thirty_Second"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/minute_1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@id/second_30"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:text="@string/one_minute"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/minute_15"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/minute_1"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:text="@string/fifteen_minute"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/minute_30"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_below="@id/minute_15"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:text="@string/thirty_minute"
                android:textColor="@color/colorText" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RadioGroup
                android:id="@+id/rd_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rad_30s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:buttonTint="@color/color_radio_button" />

                <RadioButton
                    android:id="@+id/rad_15s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:buttonTint="@color/color_radio_button" />

                <RadioButton
                    android:id="@+id/rad_1p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:buttonTint="@color/color_radio_button" />

                <RadioButton
                    android:id="@+id/rad_15p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:buttonTint="@color/color_radio_button" />

                <RadioButton
                    android:id="@+id/rad_30p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/color_radio_button" />


            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>